{
    "$schema": "https://www.schemastore.org/package.json",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "node scripts/dev.mjs",
        "dev:vite": "vite",
        "dev:laravel": "php artisan serve",
        "build": "vite build",
        "setup": "node scripts/setup.mjs",
        "test": "node scripts/test.mjs",
        "test:unit": "php artisan test",
        "db:reset": "node scripts/db-reset.mjs",
        "db:seed": "php artisan db:seed --class=SaasSeeder",
        "migrate": "php artisan migrate",
        "migrate:fresh": "php artisan migrate:fresh",
        "format": "php vendor/bin/pint",
        "lint": "php artisan insights"
    },
    "devDependencies": {
        "@tailwindcss/vite": "^4.0.0",
        "axios": "^1.11.0",
        "concurrently": "^9.0.1",
        "laravel-vite-plugin": "^2.0.0",
        "tailwindcss": "^4.0.0",
        "vite": "^7.0.7"
    }
}